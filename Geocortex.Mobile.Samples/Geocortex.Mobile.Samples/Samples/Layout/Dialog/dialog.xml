<?xml version="1.0" encoding="utf-8" ?>
<layout
    xmlns="https://geocortex.com/layout/v1"
    xmlns:gxm="https://geocortex.com/layout/mobile/v1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://geocortex.com/layout/v1 ../../../../../ViewerFramework/layout/layout-mobile.xsd
    https://geocortex.com/layout/v1 ../../../layout-custom.xsd"
    xmlns:custom="https://geocortex/layout/samples">

  <split>
    <panel title="Dialog Sample">
      <stack halign="center">
        <button margin="1" command="ui.activate" arguments="sample-dialog">Activate Dialog</button>
      </stack>
    </panel>

    <map/>

  </split>

  <dialog id="sample-dialog">
    <panel title="My Dialog" >
      <stack>
        <text margin="2">Here's my dialog component.</text>
        <split margin="2" halign="center" valign="center">
          <button margin="2">Button 1</button>
          <button margin="2">Button 2</button>
        </split>
      </stack>
    </panel>
  </dialog>

</layout>
