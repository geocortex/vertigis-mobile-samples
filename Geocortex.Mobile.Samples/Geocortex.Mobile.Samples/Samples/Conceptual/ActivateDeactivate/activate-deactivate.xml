<?xml version="1.0" encoding="utf-8" ?>
<layout
    xmlns="https://geocortex.com/layout/v1"
    xmlns:gxm="https://geocortex.com/layout/mobile/v1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://geocortex.com/layout/v1 ../../../../../ViewerSpec/layout/layout-mobile.xsd
    https://geocortex.com/layout/v1 ../../../layout-custom.xsd"
    xmlns:custom="https://geocortex/layout/samples">

  <split>

    <panel>
      <stack halign="center" valign="center">
        <button margin="1" command="ui.activate" arguments="activate-deactivate">Activate Component</button>
        <button margin="1" command="ui.deactivate" arguments="activate-deactivate">Deactivate Component</button>
      </stack>
    </panel>

    <panel>
      <stack title="Activate Deactivate Component" halign="center" valign="center">
        <custom:activate-deactivate id="activate-deactivate" active="false"/>
      </stack>
    </panel>
    
  </split>

</layout>
